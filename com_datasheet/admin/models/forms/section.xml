<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="name"
				type="text"
				label="COM_DATASHEET_SECTION_NAME_LABEL"
				description="COM_DATASHEET_SECTION_NAME_DESC"
				size="40"
				class="inputbox"
				default=""
				/>
		<field
				name="description"
				type="text"
				label="COM_DATASHEET_SECTION_DESCRIPTION_LABEL"
				description="COM_DATASHEET_SECTION_DESCRIPTION_DESC"
				size="40"
				class="inputbox"
				default=""
				rows="3"
				cols="10"
				/>
		<field 
            name="state" 
            type="list" 
            default="active" 
            label="COM_DATASHEET_ITEM_STATE_LABEL" 
            description="COM_DATASHEET_ITEM_STATE_DESC">
				<option value="inactive">Inactivo</option>
				<option value="active">Activo</option>
				</field>

		
	</fieldset>
</form>