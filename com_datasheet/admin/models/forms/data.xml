<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="name"
				type="text"
				label="COM_DATASHEET_ITEM_NAME_LABEL"
				description="COM_DATASHEET_ITEM_NAME_DESC"
				size="40"
				class="inputbox"
				default=""
				/>
		<field
				name="diminutive"
				type="text"
				label="COM_DATASHEET_ITEM_DIMINUTIVE_LABEL"
				description="COM_DATASHEET_ITEM_DIMINUTIVE_DESCRIPTION"
				size="40"
				class="inputbox"
				default=""
				/>
		<field
				name="measurement"
				type="text"
				label="COM_DATASHEET_ITEM_MEASUREMENT_LABEL"
				description="COM_DATASHEET_ITEM_MEASUREMENT_DESCRIPTION"
				size="40"
				class="inputbox"
				default=""
				/>
		<field
				name="description"
				type="text"
				label="COM_DATASHEET_ITEM_DESCRIPTION_LABEL"
				description="COM_DATASHEET_ITEM_DESCRIPTION_DESC"
				size="40"
				class="inputbox"
				default=""
				rows="3"
				cols="10"
				/>
        <field 
            name="type" 
            type="list" 
            default="text" 
            label="COM_DATASHEET_ITEM_TYPE_LABEL" 
            description="COM_DATASHEET_ITEM_TYPE_DESC">
				<option value="text">Texto</option>
				<option value="textarea">Descripcion</option>
                <option value="number">Numero</option>
				<!--<option value="image">Imagen</option>-->
				</field>   
		<field 
            name="state" 
            type="list" 
            default="active" 
            label="COM_DATASHEET_ITEM_STATE_LABEL" 
            description="COM_DATASHEET_ITEM_STATE_DESC">
				<option value="inactive">Inactivo</option>
				<option value="active">Activo</option>
				</field>
		<field 
            name="view_datasheet" 
            type="list" 
            default="datasheet" 
            label="COM_DATASHEET_ITEM_STATE_LABEL" 
            description="COM_DATASHEET_ITEM_STATE_DESC">
				<option value="datasheet">Ficha tecnica</option>
				<option value="section">Seccion</option>
				</field>		
		<field 
            name="view_tiny" 
            type="list" 
            default="tiny" 
            label="COM_DATASHEET_ITEM_STATE_LABEL" 
            description="COM_DATASHEET_ITEM_STATE_DESC">
				<option value="tiny">En previsualizacion</option>
				<option value="No">No</option>
				</field>
	</fieldset>
</form>